# Logging
LOG_FILE=app.log
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - User ID: %(user_id)s - %(levelname)s - %(message)s

# Local Paths (for backend development)
UPLOAD_FOLDER=uploads

# HPC SSH Configuration
HPC_HOST=explorer.northeastern.edu
HPC_PORT=22
HPC_USER=your_username_here
HPC_PASSWORD=your_password_here
HPC_SSH_KEY=
HPC_SSH_PASSPHRASE=

# HPC GlycoMap-Engine Path
# This is the base directory on HPC where inputs/, outputs/, and logs/ will be created
HPC_BASE_DIR=/scratch/your_username/GlycoMap-Engine
HPC_PIPELINE_SCRIPT=pipeline.sh

# Email (optional)
SMTP_SERVER=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
EMAIL_FROM=
EMAIL_SUBJECT=Your job has been processed

# Frontend results viewer URL
FRONTEND_URL=http://localhost:3000

# CORS
CORS_ORIGINS=*
